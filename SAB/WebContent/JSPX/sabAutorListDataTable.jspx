<jsp:root jsfc="f:view" xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:f="http://java.sun.com/jsf/core"
    xmlns:h="http://java.sun.com/jsf/html"
    xmlns:ice="http://www.icesoft.com/icefaces/component"
    xmlns:ui="http://java.sun.com/jsf/facelets"
    xmlns:c="http://java.sun.com/jstl/core"
    xmlns:fn="http://java.sun.com/jsp/jstl/functions">
    <html>
        <body>
            <f:view>
                <ui:composition template="/WEB-INF/facelets/mainTemplate.jspx">
                    <ui:define name="header">
                        <ui:include src="/WEB-INF/facelets/header.jspx" />
                    </ui:define>
                    <br />
                    <ui:define name="body">
                        <ice:form>
                            <br />
                            <br />
                            <div align="center">
                                <ice:commandLink id="cmdBack" 
                                    value="Back" action="goInitialMenu">
                                </ice:commandLink>
                                <ice:panelGrid columns="1" id="pnlPrincipal">                                
                                    <ice:messages style="font-family: fantasy;color: red;font-size: 13px;" />
                                </ice:panelGrid>
                            </div>
                            <div align="center">
								<ice:panelCollapsible expanded="true" toggleOnClick="false" rendered="#{sabAutorView.renderDataTable}" >
									<f:facet name="header">
										<ice:outputLabel id="msgProjectClientesTitle" value="SabAutorData" />
									</f:facet>
                                <ice:panelGroup rendered="#{sabAutorView.renderDataTable}">
                                    <div align="center" >
                                        <!--<div align="center" style="overflow: auto; width: 750px;">-->
                                        <ice:dataTable id="tableSabAutor"
                                            value="#{sabAutorView.data}" 
                                            var="sabAutor" 
                                            sortAscending="#{sabAutorView.sortAscending}"
                                            sortColumn="#{sabAutorView.sortColumnName}"
                                            rows="#{sabAutorView.pageSize}">
                                            <f:facet name="header">
                                                <ice:columnGroup>
                                                    <ice:headerRow>
                                                                                                                    <ice:column>
                                                                                                                                                                                                            <ice:commandSortHeader arrow="true" columnName="idAutor">
                                                                                                                                                                                                    <ice:outputText value="idAutor" />
                                                                                                                                                                                                            </ice:commandSortHeader>
                                                                                                                                                                                                </ice:column>
                                                                                                                                                                            <ice:column>
                                                                                                                                                                                                            <ice:commandSortHeader arrow="true" columnName="nombre">
                                                                                                                                                                                                    <ice:outputText value="Nombre" />
                                                                                                                                                                                                            </ice:commandSortHeader>
                                                                                                                                                                                                </ice:column>
                                                                                                            </ice:headerRow>
                                                </ice:columnGroup>
                                            </f:facet>
                                                                                            <ice:column>
                                                    <ice:outputText value="#{sabAutor.idAutor}" />
                                                </ice:column>
                                                                                                                                        <ice:column>
                                                    <ice:outputText value="#{sabAutor.nombre}" />
                                                </ice:column>
                                                                                    </ice:dataTable>
                                    </div>
                                    <div align="center">
                                        <ice:dataPaginator id="dataScroll" for="tableSabAutor"
                                            fastStep="3" paginator="true" rowsCountVar="rowsCount"
                                            renderFacetsIfSinglePage="false"
                                            displayedRowsCountVar="displayedRowsCountVar"
                                            firstRowIndexVar="firstRowIndex" lastRowIndexVar="lastRowIndex"
                                            pageCountVar="pageCount" pageIndexVar="pageIndex"
                                            paginatorMaxPages="4">
                                            <f:facet name="first">
                                                <ice:graphicImage id="firstpage_1"
                                                    url="/xmlhttp/css/rime/css-images/arrow-first.gif"
                                                    style="border:none;" />
                                            </f:facet>
                                            <f:facet name="last">
                                                <ice:graphicImage id="lastpage_1"
                                                    url="/xmlhttp/css/rime/css-images/arrow-last.gif"
                                                    style="border:none;" />
                                            </f:facet>
                                            <f:facet name="previous">
                                                <ice:graphicImage id="previouspage_1"
                                                    url="/xmlhttp/css/rime/css-images/arrow-previous.gif"
                                                    style="border:none;" />
                                            </f:facet>
                                            <f:facet name="next">
                                                <ice:graphicImage id="nextpage_1"
                                                    url="/xmlhttp/css/rime/css-images/arrow-next.gif"
                                                    style="border:none;" />
                                            </f:facet>
                                            <f:facet name="fastforward">
                                                <ice:graphicImage id="fastforward_1"
                                                    url="/xmlhttp/css/rime/css-images/arrow-ff.gif"
                                                    style="border:none;" />
                                            </f:facet>
                                            <f:facet name="fastrewind">
                                                <ice:graphicImage id="fastrewind_1"
                                                    url="/xmlhttp/css/rime/css-images/arrow-fr.gif"
                                                    style="border:none;" />
                                            </f:facet>
                                            <f:param value="#{rowsCount}" />
                                            <f:param value="#{displayedRowsCountVar}" />
                                            <f:param value="#{firstRowIndex}" />
                                            <f:param value="#{lastRowIndex}" />
                                            <f:param value="#{pageIndex}" />
                                            <f:param value="#{pageCount}" />
                                        </ice:dataPaginator>
                                    </div>
                                </ice:panelGroup>
								</ice:panelCollapsible>
                            </div>
                            <div align="center">
                                <ice:outputText value="NO DATA TO SHOW WAS FOUND" rendered="#{sabAutorView.renderDataTable== true ? false : true}"/>
                            </div>
                        </ice:form>
                    </ui:define>
                    <ui:define name="footer">
                        <ui:include src="/WEB-INF/facelets/footer.jspx" />
                    </ui:define>
                </ui:composition>
            </f:view>
        </body>
    </html>
</jsp:root>
